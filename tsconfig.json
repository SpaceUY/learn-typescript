{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "lib": [
      "es2015",
      "esnext.asynciterable"
    ],
    "allowJs": true,
    "checkJs": true,
    "outDir": ".",
    "moduleResolution": "node",
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
  },
  "include": [
    "./**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}